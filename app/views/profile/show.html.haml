= render 'profile_form'
%hr

%h1 Profile for #{ @orcid_profile.name }
%h2 Works
%ul
  - @orcid_profile.works.each do |work|
    %li.work
      - ama = work.altmetric_article
      - if ama.try(:has_data?)
        %a{href: ama.details_uri, target: :_blank}
          %img{src: ama.badge_uri}
        %a{href: ama.details_uri, target: :_blank}
          %h3= work.title
      - else
        %h3= work.title
      %h4= work.doi
